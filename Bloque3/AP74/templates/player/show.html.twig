{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ player.lastName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ player.age }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{{ player.team }}</td>
            </tr>
            <tr>
                <th>Goals</th>
                <td>{{ player.goals }}</td>
            </tr>
            <tr>
                <th>Cards</th>
                <td>{{ player.cards }}</td>
            </tr>
            <tr>
                <th>BithDate</th>
                <td>{{ player.bithDate ? player.bithDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_player_index') }}">back to list</a>

    <a href="{{ path('app_player_edit', {'id': player.id}) }}">edit</a>

    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
